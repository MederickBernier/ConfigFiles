# EditorConfig for consistent formatting
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx}]
quote_type = single
max_line_length = 80

[*.html]
max_line_length = 120

[*.{css,scss}]
indent_size = 2

[*.json]
quote_type = double

[*.md]
trim_trailing_whitespace = false

[*.env]
trim_trailing_whitespace = false
